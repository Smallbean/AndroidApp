<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#CCFFFF">
	    		
	    		
	    <LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"	    	
	    	>		
	   	<ImageView
    		android:layout_height="50px"
    		android:layout_width="50px"
    		android:layout_gravity="left"    		
    		android:src="@drawable/tv" 
    		android:padding="3px"/>
    		
		<TextView
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:textColor="#666666"
    		android:textSize="40px"
    		android:typeface="monospace"
    		android:text="smallbean" /> 		    		
    	</LinearLayout>
    	
    			
		<ViewFlipper 
    		android:id = "@+id/subject_views"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent">

    		<!-- Dashboard -->
 			<LinearLayout
	    		android:orientation="vertical"
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	    		android:background="#CCFFFF">
	    		<Button
	        		android:id="@+id/subject_create_button"
	        		android:text="@string/subject_new"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:layout_gravity="center_horizontal"
	        		android:layout_marginTop="50dip" />
	    		<Button
	        		android:id="@+id/subject_list_button"
	        		android:text="@string/subject_existing" 
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:layout_gravity="center_horizontal" />        
			</LinearLayout>

			<!-- Create Project -->
			<LinearLayout
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent">
	    		<EditText
	        		android:id="@+id/subject_create_name"
	        		android:layout_width="fill_parent"
	        		android:layout_height="wrap_content"
	        		android:layout_marginTop="25dip"
	        		android:layout_weight="1" />
	    		<Button
	        		android:id="@+id/subject_create_save_button"
	        		android:text="@string/save"
	        		android:onClick="createProject"
	        		android:layout_marginTop="25dip"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content" />
        		<Button
            		android:id="@+id/subject_create_back_button"
            		android:text="@string/back"
            		android:layout_marginTop="25dip"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content" />
			</LinearLayout>
	
			<!-- Project List -->
    		<LinearLayout
        		android:orientation="vertical"
        		android:layout_width="fill_parent"
        		android:layout_height="fill_parent">
        		<TextView
            		android:text="@string/subject_existing"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="25dip" />
        		<Spinner
            		android:prompt="@string/subject_list_dropdown_prompt"
            		android:id="@+id/subject_list_dropdown"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content" />
	    		<LinearLayout
	        		android:layout_width="fill_parent"
	        		android:layout_height="fill_parent">
	        		<Button
	            		android:id="@+id/subject_list_view_button"
	            		android:text="@string/view"
	            		android:layout_width="wrap_content"
	            		android:layout_height="wrap_content"
	            		android:gravity="right" />
	        		<Button
	            		android:id="@+id/subject_list_back_button"
	            		android:text="@string/back"
	            		android:layout_width="wrap_content"
	            		android:layout_height="wrap_content"
	            		android:gravity="right" />
	    		</LinearLayout>
    		</LinearLayout>
    
		    <!-- View Project -->
    		<LinearLayout
        		android:orientation="vertical"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content">        		
        		<TextView android:id="@+id/subjectname"
        				  android:text="subject"
        				  android:layout_width="fill_parent"
        				  android:layout_height="wrap_content"
        				  android:textColor="#000000"        				  
        		/>
	    		<LinearLayout
	        		android:layout_width="fill_parent"
	        		android:layout_height="wrap_content">
	        		<Button
	            		android:text="@string/app_name_photo"
	            		android:onClick="takePhoto"
	            		android:layout_height="wrap_content"
	            		android:layout_width="wrap_content"
	            		android:layout_marginTop="25dip" />
	        		<Button
	            		android:text="@string/app_name_audio"
	            		android:onClick="recordAudio"
	            		android:layout_height="wrap_content"
	            		android:layout_width="wrap_content"
	            		android:layout_marginTop="25dip" />
	        		<Button
	            		android:text="@string/app_name_video"
	            		android:onClick="recordVideo"
	            		android:layout_height="wrap_content"
	            		android:layout_width="wrap_content"
	            		android:layout_marginTop="25dip" />
					<Button
	            		android:text="@string/app_name_gallery"
	            		android:onClick="showGallery"
	            		android:layout_height="wrap_content"
	            		android:layout_width="wrap_content"
	            		android:layout_marginTop="25dip" />	            		
        		</LinearLayout>
        		<Button
            		android:id="@+id/subject_dashboard_button"
            		android:text="@string/dashboard"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="25dip" />
    		</LinearLayout>
		</ViewFlipper>
</LinearLayout>